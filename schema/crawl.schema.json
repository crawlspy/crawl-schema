    "$schema": "http://json-schema.org/schema#",
    "$id": "https://schemas.w3cub.com/schemas/crawl",
    "title": "Crawl Properties",
    "description": "This schema is a standard for capturing pictures.",
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "title": "Crawl name",
        "version": "1.0.0",
        "$comment": "Crawl Name, commonly titlecase"
      },
      "value": {
        "type": "string",
        "title": "Crawl value, the Identification of current crawl",
        "version": "1.0.0",
        "$comment": "Crawl type, commonly lowercase"
      },
      "description": {
        "type": "string",
        "title": "Crawl description",
        "version": "1.0.0",
        "$comment": "Crawl description"
      },
      "type": {
        "type": "string",
        "version": "1.0.0",
        "title": "Crawl type json or html",
        "enum": ["json", "html"]
      },
      "category": {
        "type": "boolean",
        "version": "1.0.0"
      },
      "categoryurl": {
        "type": "string",
        "version": "1.0.0"
      },
      "search": {
        "type": "boolean",
        "version": "1.0.0"
      },
      "chinesesearch": {
        "type": "boolean",
        "version": "1.0.0"
      },
      "categoryitem": {
        "type": "object",
        "version": "1.0.0",
        "$comment": "category item content match",
        "properties": {
          "id": {
            "version": "1.0.0",
            "type": "string"
          },
          "name": {
            "version": "1.0.0",
            "type": "string"
          }
        },
        "required": [
          "id",
          "name"
        ]
      },
      "categorydata": {
        "type": "array",
        "version": "1.0.0",
        "$comment": "directly provide category data",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "version": "1.0.0",
              "type": "string"
            },
            "name": {
              "version": "1.0.0",
              "type": "string"
            }
          },
          "required": [
            "id",
            "name"
          ]
        }
      },
      "pageurl": {
        "type": "string",
        "version": "1.0.0"
      },
      "pagematch": {
        "version": "1.0.0",
        "type": "string"
      },
      "pagemethod": {
        "version": "1.0.0",
        "type": "string"
      },
      "pageoffset": {
        "version": "1.0.0",
        "type": "string"
      },
      "pageoffsetmatch": {
        "version": "1.0.0",
        "type":"string"
      },
      "searchurl": {
        "version": "1.0.0",
        "type":"string"
      },
      "searchmatch": {
        "version": "1.0.0",
        "type":"string"
      },
      "pageitem": {
        "version": "1.0.0",
        "type": "object",
        "$comment": "page item content match",
        "properties": {
          "url": {
            "version": "1.0.0",
            "type": "string"
          },
          "downloadurl": {
            "version": "1.0.0",
            "type": "string"
          },
          "width": {
            "version": "1.0.0",
            "type": "string"
          },
          "height": {
            "version": "1.0.0",
            "type": "string"
          }
        },
        "required": [
          "url",
          "downloadurl",
          "width",
          "height"
        ]
      },
      "useragent": {
        "title": "fetch useragent or false",
        "type":[ "string", "boolean"]
      }
    },
    "required": [
      "name",
      "value",
      "description",
      "type",
      "category",
      "search",
      "chinesesearch",
      "pageurl",
      "pagematch",
      "pageitem"
    ]
  }